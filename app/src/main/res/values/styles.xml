<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupTheme">@style/ToolbarPopupTheme</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ToolbarPopupTheme" >
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextGrey</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/colorTextGrey</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
