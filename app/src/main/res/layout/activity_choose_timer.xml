<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/colorAccent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ChooseTimerActivity">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/work_time"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="22sp" />

                <NumberPicker
                    android:id="@+id/work_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:theme="@style/AppTheme.Picker">
                </NumberPicker>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/short_break"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="22sp" />

                <NumberPicker
                    android:id="@+id/short_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:theme="@style/AppTheme.Picker">
                </NumberPicker>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/long_break"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="22sp" />

                <NumberPicker
                    android:id="@+id/long_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:theme="@style/AppTheme.Picker">
                </NumberPicker>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/colorPrimary"
                    android:onClick="goToPomodoro"
                    android:text="@string/set_timer" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorAccent"
        app:itemTextColor="@color/colorTextGrey"
        app:itemIconTint="@color/colorPrimary"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/nav_menu" />

</android.support.v4.widget.DrawerLayout>