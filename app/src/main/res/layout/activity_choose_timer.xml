<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTimerActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Time"
            android:textSize="24sp"
            android:gravity="center"/>
        <NumberPicker
            android:id="@+id/work_picker"
            android:layout_width="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginStart="155dp">
        </NumberPicker>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short Break"
            android:textSize="24sp"
            android:gravity="center"/>
        <NumberPicker
            android:id="@+id/short_picker"
            android:layout_width="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginStart="155dp">
        </NumberPicker>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long Break"
            android:textSize="24sp"
            android:gravity="center"/>
        <NumberPicker
            android:id="@+id/long_picker"
            android:layout_width="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginStart="155dp">
        </NumberPicker>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Timer"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="100dp"
        android:onClick="goToPomodoro"
        android:layout_marginStart="100dp" />
</RelativeLayout>